---
interface Props {
    id: string
    img: string
    success: boolean
    flightNumber: number
    details: string | null
}
 const { success, flightNumber, img, id, details } = Astro.props;
 const statusLauncher = success ? "Success" : "Failed"
---

<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href={ `/launch/${id}`}
    class="flex rounded-lg border shadow-md bg-slate-400 hover:scale-105"
    >
        <picture class="flex justify-center p-4">
            <img class="mb-5 rounded-lg" src={img} alt={`patch for launch ${id}`}>
        </picture>
    </a>

    <div class="p-5  "> 


        <span class:list={
            [
                "text-xs font-semibold px-2.5 rounded",
                {
                    "bg-green-500 text-green-900": success,
                    "bg-red-400 bg-red-900": !success
                }
            ]
        }>
            {statusLauncher}
    </span>

        <p>
            flight #{flightNumber}
        </p>

        <p>
            { details !== null && details?.length > 100 ? details.slice(0,100) + "..." : details}
        </p>
    </div>
</div>
