---

// import { Icon } from 'astro-icon'
import Phone from 'astro-heroicons/outline/phone.astro'
import Microphone from 'astro-heroicons/outline/microphone.astro'
import VideoCamera from 'astro-heroicons/outline/VideoCamera.astro'
import PlusCircle from 'astro-heroicons/outline/PlusCircle.astro'
import SpeakerXMark from 'astro-heroicons/outline/SpeakerXMark.astro'

import RocketLaunch from 'astro-heroicons/solid/RocketLaunch.astro';
import PlayCircle from 'astro-heroicons/outline/PlayCircle.astro'
import Clock from 'astro-heroicons/outline/Clock.astro'
import Folder from 'astro-heroicons/outline/Folder.astro'
import ArrowUpTray from 'astro-heroicons/outline/ArrowUpTray.astro'
import ArrowDownTray from 'astro-heroicons/outline/arrowDownTray.astro'
import Eye from 'astro-heroicons/outline/Eye.astro'

---

<body class="flex min-h-screen bg-slate-400">

    <nav class="flex flex-col bg-slate-600 w-20">

        <div class=" text-white my-5">
            <RocketLaunch class="p-5 text-gray-200"/>
        </div>
        <div class="flex flex-col mx-auto gap-8 text-gray-400 ">
            <PlayCircle class=" h-[30px] w-[30px]"/>
            <Clock class="h-[30px] w-[30px]"/>
            <Folder class="h-[30px] w-[30px]"/>
            <ArrowUpTray class="h-[30px] w-[30px]"/>
            <ArrowDownTray class="h-[30px] w-[30px]"/>
            <Eye class="h-[30px] w-[30px]"/>
        </div>
    </nav>

    <div class="grid grid-cols-3 items-stretch justify-items-stretch w-full bg-cover bg-center bg-gradient-to-b from-gray-200 via-gray-400 to-gray-600" style="background-image: url('https://mediaweb.sfo3.cdn.digitaloceanspaces.com/img1.jpg');">

            <div class="col-start-3 justify-self-end h-[40px] mt-10 mr-10">
                <SpeakerXMark class=" bg-slate-400 rounded-3xl p-3 text-white h-[40px] hover:cursor-pointer hover:text-gray-600 hover:bg-slate-100"/>
            </div>
    
            <div class="justify-self-center self-end my-5">
                <div class="flex items-center my-4 gap-2">
                    <div class=" rounded-full bg-green-600 h-[10px] w-[10px] "></div>
                    <p class=" text-white text-[22px]"> Meeting in Progress </p>
                </div>
                <div class="flex w-[60px] h-[60px]">
                    <img class=" rounded-full border-2 border-white" src="https://avatars.githubusercontent.com/u/67946056?v=4" alt="">
                    <img class=" -ml-3 rounded-full border-2 border-white" src="https://avatars.githubusercontent.com/u/67946056?v=4" alt="">
                    <img class=" -ml-3 rounded-full border-2 border-white" src="https://avatars.githubusercontent.com/u/67946056?v=4" alt="">
                    <img class=" -ml-3 rounded-full border-2 border-white" src="https://avatars.githubusercontent.com/u/67946056?v=4" alt="">
                </div>
                <div class="flex items-center gap-1">
                    <p class=" text-white text-[14px] ">Participants (4 total)</p>
                    <PlusCircle class=" rounded-3xl p-2 text-white h-[40px] hover:cursor-pointer hover:text-gray-600 hover:bg-slate-100"/>
                </div>
            </div>
    
            <div class="col-start-2 justify-self-center self-end flex h-[40px] gap-2 my-14">
                <Phone class="bg-red-600 rounded-3xl p-2 text-white hover:cursor-pointer hover:text-gray-600 hover:bg-slate-100"/>
                <Microphone class="bg-slate-200 rounded-3xl p-2 text-blue-video hover:cursor-pointer hover:text-gray-600 hover:bg-slate-100"/>
                <VideoCamera class="bg-slate-200 rounded-3xl p-2 text-blue-video hover:cursor-pointer hover:text-gray-600 hover:bg-slate-100"/>
            </div>
    </div>
</body>

